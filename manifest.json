{
    "manifest_version": 2,
    "name": "Banner Extension",
    "version": "1.0",
    "description": "Adds a banner to a specified page.",
    "permissions": ["storage", "activeTab", "webRequest", "webRequestBlocking"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}